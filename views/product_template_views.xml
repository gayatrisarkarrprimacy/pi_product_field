<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="product_template_form_view_inherit_alt" model="ir.ui.view">
            <field name="name">product.template.form.inherit.pi.fields.alt</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <!-- Add fields in the Inventory tab -->
                <xpath expr="//page[@name='inventory']//group[@name='group_lots_and_weight']" position="after">
                    <separator string="Primary &amp; Secondary UOM"/>
                    <group name="pi_uom_fields" colspan="2">
                        <group>
                            <field name="primary_uom_id" options="{'no_create': True, 'no_edit': True}"/>
                            <field name="primary_qty"/>
                        </group>
                        <group>
                            <field name="secondary_uom_id" options="{'no_create': True, 'no_edit': True}"/>
                            <field name="secondary_qty"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
        </data>
</odoo>
